generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["metrics"]
  binaryTargets   = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  directUrl    = env("DIRECT_URL")
  relationMode = "prisma"
}

model Record {
  id                String    @id @default(uuid())
  file_url          String?   // nullを許容するように変更
  file_key          String?
  file_name         String?   // ファイル名を保存するフィールドを追加
  r2_bucket         String?
  transcript_text   String?
  timestamps_json   String?   @db.Text
  summary_text      String?
  article_text      String?
  error             String?
  status            Status    @default(UPLOADED)
  processing_step   String?
  processing_progress Float?   // 処理の進捗率（0-100%）を保存するフィールドを追加（Float型に変更）
  created_at        DateTime  @default(now())
  deleted_at        DateTime?

  @@map("records")
}

enum Status {
  UPLOADED
  PROCESSING
  TRANSCRIBED
  SUMMARIZED
  DONE
  ERROR
}
